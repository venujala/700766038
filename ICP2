Q1 
   def fullname(first_name, last_name):
    full_name = first_name + " " + last_name
    return full_name

def string_alternative(full_name):
    # Extract every other character starting from index 0
    alternate_chars = full_name[::2]
    return alternate_chars

if __name__ == "__main__":
    # Input from user
    first_name = input("Enter your first name: ")
    last_name = input("Enter your last name: ")

    # Get the full name
    full_name = fullname(first_name, last_name)
    print("Full Name:", full_name)

    # Get every other character in the full name
    alternate_string = string_alternative(full_name)
    print("Alternate characters:", alternate_string)

INPUT:  Good Evening
OUTPUT: Go vnn

